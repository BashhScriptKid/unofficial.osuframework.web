{
  "metadata":
  [
    {
      "src":
      [
        {
          "src": "../osu-framework",
          "files":
          [
            "**/*.csproj"
          ],
          "exclude":
          [
            "SampleGame/**",
            "SampleGame.Android/**",
            "SampleGame.Desktop/**",
            "SampleGame.iOS/**",
            "osu.Framework.Templates/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content":
    [
      {
        "files":
        [
          "**/*.{md,yml}"
        ],
        "exclude":
        [
          "_site/**"
	  "README.md"
        ]
      }
    ],
    "resource":
    [
      {
        "files":
        [
          "images/**",
          "assets/**"
        ]
      }
    ],
    "output": "_site",
    "template":
    [
      "default",
      "modern"
    ],
    "globalMetadata":
    {
      "_appName": "",
      "_appTitle": "osu!framework",
      "_appFooter": "osu!framework is licensed under the MIT licence, docs powered by docfx",
      "_appLogoPath": "assets/docfx_icon.png",
      "_appFaviconPath": "assets/nupkg icon.png",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
